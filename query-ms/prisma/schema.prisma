generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sector {
  id           String     @id @default(uuid())
  name         String
  parentSector String?
  country      String
  Emission     Emission[]

  @@index([country])
  @@index([name])
  @@index([parentSector])
}

model Emission {
  id       Int    @id @default(autoincrement())
  Sector   Sector @relation(fields: [idSector], references: [id])
  idSector String
  year     Int
  value    Float

  @@index([idSector])
  @@index([year])
}
